/* components/question/question.wxss */
@import "../../icon/index.wxss";
.scroll-view {
  /* height: 70vh; */
  background-color: #ffffff;
}
.q {
  /* width: 100%; */
  /* height: 100%; */
  /* overflow-y: auto; */
  /* overflow-x: hidden; */
  background-color: #ffffff;
  box-sizing: border-box;
}
/* 题目 */
.q-topic {
  padding: 0 20rpx;
  overflow: hidden;
  font-size: 30rpx;
  line-height: 52rpx;
}
.judg-tag {
  float: left;
  margin-right: 10rpx;
  font-size: 22rpx;
  border-radius: 10rpx;
  line-height: 30rpx;
  transform: translateY(7rpx);
  background-color: var(--bg-color-spin-blue);
  padding: 4rpx 20rpx 6rpx 20rpx;
  color: #ffffff;
}
/* 图片 */
.q-image {
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  padding: 20rpx 0;
}
.q-image-desc {
  width: 100%;
  height: 300rpx;
}

/* 选项列表 */
.q-select-list {
  padding: 0 20rpx;
}
.q-select-is, .q-select-no {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  box-sizing: border-box;
  align-items: center;
}
.q-select-btn {
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  text-align: center;
  box-shadow: 0 0 12rpx 12rpx rgba(0,0,0,.06);
  color: #3f3e3e;
}
.q-select-btn .iconfont {
  font-size: 40rpx;
}
.q-select-desc {
  flex: 1;
}
.q-select-item .active {
  color: #ffffff;
  background-color: green;
}

.q-answer {
  margin: 40rpx 20rpx;
  padding: 20rpx 0rpx 20rpx 20rpx;
  background-color: rgba(0,0,0,.05);
  font-weight: bolder;
}
.q-skill {
  padding: 20rpx;
}
.q-skill-title {
  border-left: 10rpx solid var(--bg-color-spin-blue);
  padding-left: 10rpx;
  font-size: 28rpx;
  font-weight: bolder;
  margin-bottom: 20rpx;
}
/* 答案解释 */
.q-explain {
  padding: 20rpx;
  border-top: 20rpx solid rgba(0,0,0,.05);
  line-height: 60rpx;
  font-size: 34rpx;
}
.q-explain-btn {
  border-left: 10rpx solid var(--bg-color-spin-blue);
  padding-left: 10rpx;
  font-size: 28rpx;
  font-weight: bolder;
}
.q-explain-content {
  width: 100%;
  overflow: hidden;
  font-size: 28rpx;
}

/* 按钮上下题 */
.next-box {
  overflow: hidden;
  margin-bottom: 100rpx;
  padding-top: 20rpx;
  display: flex;
  justify-content: center;
  border-top: 20rpx solid rgba(0,0,0,.1);
}
.next-box .btn {
  float: left;
}

/* 动态类 */
.correct {
  color: var(--themeColor-light);
}
.error {
  color: red;
}
