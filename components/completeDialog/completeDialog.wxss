/* components/completeDialog/completeDialog.wxss */
@import "../../common//wxss/animate.wxss";
.c-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .5);
  animation: fadeIn .3s;
  z-index: 999;
}
.content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 80vw;
  height: 660rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  /* animation: fadeIn 2s; */
  display: flex;
  flex-direction: column;
  align-items: center;
  letter-spacing: 2rpx;
  z-index: -2;
}
.header {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  letter-spacing: 2rpx;
  font-weight: bolder;
}
.c-dialog-back {
  color: #000000;
}
.submit-image {
  position: relative;
  /* flex: 1; */
  /* display: flex; */
  /* text-align: center; */
  /* align-items: center; */
}
.submit-image-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 250rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-width: 20rpx;
  border-style: solid;
  border-color: rgba(205, 225, 241, .5);
  border-radius: 100%;
  box-sizing: border-box;
  overflow: hidden;
  z-index: 1;
  /* background-color: red; */
}
.submit-image .submit-desc {
  padding-bottom: 6rpx;
  font-size: 24rpx;
  color:rgb(56, 53, 53);
}
.submit-num {
  font-size: 24rpx;
}
.continue-image {
  position: relative;
  overflow: hidden;
}
.continue-image-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 250rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  box-sizing: border-box;
  border-width: 16rpx;
  border-style: solid;
  border-color: rgba(205, 225, 241, .3);
  border-radius: 100%;
  box-sizing: border-box;
  overflow: hidden;
  z-index: 1;
}
.continue-image-inner::after {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  border-width: 16rpx;
  border-style: solid;
  border-color: rgba(205, 225, 241, .5);
  border-radius: 100%;
  box-sizing: border-box;
  transform: translate(50%, 40%);
  z-index: -1;
}
.continue-desc {
  padding-bottom: 10rpx;
  color:rgb(56, 53, 53);
}
.continue-num {
  color: var(--themeColor-light);
}
.time {
  margin-bottom: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  letter-spacing: 2rpx;
  /* background-color: red; */
  font-size: 24rpx;
  color: rgb(119, 114, 114);
}
.time .iconfont {
  padding-right: 20rpx;
}
.btn-ground {
  font-size: 30rpx;
  margin: 0 auto 40rpx;
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  text-align: center;
  justify-content: space-around;
}
.submit-btn {
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  color: #ffffff;
  width: 40%;
  border-radius: 32rpx;
}
.submit-btn-continue {
  box-sizing: border-box;
  width: 40%;
  border-radius: 32rpx;
  border: 2rpx solid rgba(0, 0, 0 ,.7);
  padding: 10rpx 20rpx;
  color: #000000;
}
.continue-btn {
  width: 40%;
}
.continue-btn:first-child {
  letter-spacing: 2rpx;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #000000;
  color: #000000;
}
.continue-btn:last-child {
  letter-spacing: 2rpx;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #ffffff;
  background-image: linear-gradient(to right, var(--themeColor-light-A), var(--themeColor-light));
}
.btn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  color: #ffffff;
  text-align: center;
  border-radius: 50rpx;
  letter-spacing: 2rpx;
  background-color: red;
}
.color-red {
  color: red;
}
.color-green {
  color: green;
}