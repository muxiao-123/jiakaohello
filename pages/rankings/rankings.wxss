/* pages/rankings/rankings.wxss */
@import "../../template/cell-row/cell-row.wxss";
.scroll-view {
  /* height: calc(90vh - 100rpx); */
  height: calc(90vh + 20rpx);
}
.rank-box {
  display: flex;
  flex-direction: column;
  /* flex-wrap: n; */
}
.rand-box-cell {
  padding: 0 20rpx;
}
.rand-box-cell-item {
  position: relative;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.rand-box-cell-item::after {
  content: '';
  position: absolute;
  top: -50%;
  bottom: -50%;
  left: -50%;
  right: -50%;
  transform: scale(0.5, 0.5);
  border-bottom: 2rpx solid var(--bg-color-place);
}
.rank-placeholder {
  position: relative;
  min-height: 70vh;
  flex: 1;
  /* background-color: red; */
  padding: 20rpx;
  border-top: 20rpx solid rgba(0, 0,0, .1); 
}
.rank-placeholder-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgba(0, 0,0, .6);
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.rank-placeholder-box .iconfont {
  font-size: 200rpx;
  padding-bottom: 20rpx;
  color: rgba(0, 0,0, .3);
}
/* rank */
.rank-box-inner {
  border-bottom: 10rpx solid rgba(0, 0,0, .1);
}