/* components/subject/subject.wxss */
@import '../../icon/index.wxss';

.subject {
  height: 100%;
  display: flex;
  flex-wrap: nowrap;
}
.subject-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.select-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 0;
}
.select-box-icon {
  width: 80rpx;
  height: 80rpx;
  font-size: 46rpx;
  color: rgba(255, 255, 255, .8);
  /* background-color: var(--themeColor-light); */
  line-height: 80rpx;
  text-align: center;
  border-radius: 80rpx;
  pointer-events: none;
}
.select-box-desc {
  font-size: 28rpx;
  color: var(--text-color-black);
  padding-top: 10rpx;
}

.canvas {
  position: absolute;
  top: 0;
  left: 0;
  transform: translateX(9999rpx);
  /* display: none; */
  z-index: -1;
  pointer-events: none;
}
.image {
  width: 200rpx;
  height: 200rpx;
}
.canvas-box {
  position: relative;
}
.canvas-text {
  position: absolute;
  font-size: 20rpx;
  text-align: center;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: var(--text-color-w);
  /* pointer-events: none; */
}
.canvas-text-item:nth-of-type(1) {
  font-size: 22rpx;
  padding-bottom: 16rpx;
}
.hoverClass {
  transition: transform .3s;
  transform: scale(1.1, 1.1);
}