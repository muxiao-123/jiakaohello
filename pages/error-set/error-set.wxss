/* pages/error-set/error-set.wxss */
@import "../../icon/index.wxss";

.error-list {
  position: relative;
}
.error-list-header {
  position: relative;
  padding: 20rpx;
  border-bottom: 20rpx solid rgba(0,0,0,.1);
}
.error-num-image {
  position: relative;
  text-align: center;
  background-color: #ffffff;
}
.error-num-canvas {
  height: 200rpx;
  width: 200rpx;
}
.error-num {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: var(--text-color-w);
  z-index: 1;
}
.error-num-id {
  font-size: 34rpx;
  font-weight: bolder;
  color: var(--text-color-w)
}
.error-num-text {
  font-size: 20rpx;
}
.error-list-header-btn {
  width: 70vw!important;
  border-radius: 40rpx;
  color: #ffffff;
  background-image: linear-gradient(to right, var(--themeColor), var(--themeColor-light));
  letter-spacing: 4rpx;
}
.error-list-middle {
  display: flex;
  /* justify-content: space-around; */
  padding: 20rpx;
  border-bottom: 20rpx solid rgba(0,0,0,.1);
}
.error-list-middle-desc {
  flex: 1;
  font-size: 1.2em;
  font-weight: bolder;
  text-align: left;
  letter-spacing: 2rpx;
}
.error-list-middle-btn {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.error-list-middle-btn text:first-child {
  padding-right: 20rpx;
  color: rgba(0,0,0,.8);
}

.error-list-type-item {
  display: flex;
  padding: 20rpx 0;
  height: 80rpx;
  align-items: center;
  border-bottom: 4rpx solid rgba(0,0,0,.1);
  background-color: #ffffff;
}
.error-list-type-item .tag {
  text-align: center;
  margin: 0 20rpx;
  height: 60rpx;
  width: 60rpx;
  line-height: 60rpx;
  border-radius: 100%;
  background-color: var(--themeColor-light);
  border: 4rpx solid var(--themeColor);
  color: #ffffff;
  box-shadow: 0 0 4rpx 4rpx rgba(0,0,0,.1);
}
.error-list-type-item .desc {
  flex: 1;
  text-align: left;
  width: 80rpx;
}
.error-list-type-item .num {
  padding-right: 30rpx;
  text-align: center;
  width: 80rpx;
  color: rgba(0,0,0,.8);
}
.error-list-type-item .icon-zhuanwan {
  padding-left: 20rpx;
}
.error-list-btn {
  position: absolute;
  bottom: -150rpx;
  left: 0;
  right: 0;
}
.error-list-btn button {
  width: 70vw!important;
  border-radius: 40rpx;
  color: #ffffff;
  background-image: linear-gradient(to right, var(--themeColor), var(--themeColor-light));
  letter-spacing: 4rpx;
}
.error-info {
  position: relative;
  height: 600rpx;
}
.error-info-prot {
  position: absolute;
  top: 50%;
  left: 50%;
  height: 200rpx;
  transform: translate(-50%, -50%);
  color: rgba(0,0,0,.8);
  font-size: 24rpx;
}
.error-info-prot-icons {
  display: flex;
  justify-content: space-around;
  padding-bottom: 20rpx;
}
#error-canvas {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  transform: translate(-50%, -50%);
  z-index: -3;
}
#error-canvas-A {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: -3;
}
.test-attr {
  height: 100rpx;
  background-color: attr(data-detail);
}